[general]
accounts = main
maxsyncaccoutns = 1

[Account main]
localrepository = main-local
remoterepository = main-remote
status_backend = sqlite
autorefresh = 1
quick = 5

[Repository main-local]
type = Maildir
localfolders = $email_maildir_path

[Repository main-remote]
type = IMAP
remotehost = $email_imap_hostname
remoteuser = $email_username
remotepass = $email_password
keepalive = 60
holdconnectionopen = yes
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
