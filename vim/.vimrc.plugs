call plug#begin('~/.vim/plugged')

Plug 'tpope/vim-sensible'       " sensible vim defaults
Plug 'tpope/vim-sleuth'         " heuristically set buffer options (shiftwidth, expandtab, etc.)

" COLORSCHEMES:
Plug 'altercation/vim-colors-solarized'

" UI_UX:
Plug 'airblade/vim-gitgutter'         " show git diff in the gutter
Plug 'bling/vim-airline'              " Airline: a better status bar

Plug 'kien/ctrlp.vim'                 " Ctrl-P: fuzzy file search and opening
Plug 'scrooloose/nerdtree'            " NerdTree: file browser
Plug 'christoomey/vim-tmux-navigator' " Seamless navigation between tmux panes and vim splits

Plug 'scrooloose/syntastic'           " automatic syntax checking / linting
Plug 'Shougo/neocomplete.vim'         " autocompletion

Plug 'godlygeek/tabular'              " align stuff

" UTILS:
Plug 'Shougo/vimproc.vim'       , { 'for': 'haskell', 'do': 'make' }        " Interactive command execution (dep for ghc-mod..)

" LANGUAGES:
" golang
Plug 'fatih/vim-go'             , { 'for': 'go' }

" Haskell
Plug 'eagletmt/ghcmod-vim'      , { 'for': 'haskell' }                 " happy haskell programming (type, errors/warnings, ..)
Plug 'eagletmt/neco-ghc'        , { 'for': 'haskell' }                 " haskell completion plugin

Plug 'pangloss/vim-javascript'  , { 'for': ['javascript', 'necessity']}

" The hipster selection
Plug 'wavded/vim-stylus'
Plug 'digitaltoad/vim-jade'

" Other misc. filetypes/syntaxes
Plug 'vim-scripts/gitignore.vim'                                       " .gitignore file support
Plug 'ekalinin/Dockerfile.vim'
Plug 'elzr/vim-json'            , { 'for': 'json' }                    " more kickass JSON syntax highlight
Plug 'tpope/vim-markdown'                                              " syntax highlight
Plug 'cespare/vim-toml'                                                " TOML
Plug 'vimez/vim-tmux'                                                  " highlight in tmux.conf

call plug#end()
